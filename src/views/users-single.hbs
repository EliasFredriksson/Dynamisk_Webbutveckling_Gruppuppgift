<div class="profile-page-body">
  {{>header-home}}

  {{#if (checkIfIdAreSame user._id id)}}
  <a href="/users/edit" class="edit-button"><button>Edit Your Profile</button></a>
  {{/if}}

  <h2>{{user.username}}</h2>

  <div class="container">

    <div class="profile-upper-container">
      <div class="profile-container">
        <div class="image-container">
          <img src="{{user.image}}" alt="{{user.username}}">
        </div>
        <h2>{{user.username}}</h2>
      </div>
    </div>

    <div class="profile-lower-container">

      <div class="profile-recipes-container">
        <h3>{{user.username}}s recept</h3>
        {{#each recipes}}
        <a href="/recipes/{{_id}}">
          <div class="recipes-container">
            <div class="image-container">
              <img
                src="https://purewows3.imgix.net/images/articles/2019_01/Homemade_Swedish_Meatballs_Recipe.jpg?auto=format,compress&cs=strip"
                alt="foood">
            </div>
            <div class="recipe-info-container">
              <div class="recipe-title-container">
                <h3>{{name}}</h3>
              </div>
              <div class="profile-line"></div>
              <div class="recipe-rating-container">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>

      <div class="profile-recipes-container">
        <h3>{{user.username}}s favoriter</h3>
        {{#each recipes}}
        <a href="/recipes/{{_id}}">
          <div class="recipes-container">
            <div class="image-container">
              <img
                src="https://purewows3.imgix.net/images/articles/2019_01/Homemade_Swedish_Meatballs_Recipe.jpg?auto=format,compress&cs=strip"
                alt="foood">
            </div>
            <div class="recipe-info-container">
              <div class="recipe-title-container">
                <h3>{{name}}</h3>
              </div>
              <div class="profile-line"></div>
              <div class="recipe-rating-container">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>


    </div>

  </div>
</div>
</div>