<header>
    <div class="logo">
        <div class="history-back" onclick="window.history.back()">
            <i class="fas fa-arrow-left"></i>
        </div>
        <a href="/">
            <svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 570 200" width="300" height="105">
                <defs>
                    <image width="654" height="282" id="img1"
                        href="data:image/png;base64," />
                </defs>
                <use id="Lager 1" href="#img1" x="0" y="0"></use>
            </svg>
        </a>
    </div>

    <nav>
        <a href="/"><span>Hem
                <div class="nav-underline"></div></span>
        </a>
        <a href="/search"><span>Utforska
                <div class="nav-underline"></div></span>
        </a>
        {{#if loggedIn}}
        <a href="/recipes/create"><span>Nytt Recept
                <div class="nav-underline"></div></span>
        </a>
        <a href="/users/{{ id }}"><span>Profil
                <div class="nav-underline"></div></span>
        </a>
        {{/if}}
    </nav>

    <div class="login-container">
        <form method="post">
            <div class="input-containers">
                <div class="single-input-container">
                    {{#if loggedIn}}
                    {{else}}
                    <label for="username">Username:</label>
                    <input type="text" name="username" id="username" placeholder="Username" />

                    {{/if}}
                </div>
                <div class="single-input-container">
                    {{#if loggedIn}}
                    <a href="/users/{{ id }}" id="logged-in-user">
                        <p>
                            <b>{{ username }}</b>
                        </p>
                        <div class="img-wrapper">
                            <img src="{{profileImage}}" alt="{{ username }}" />
                        </div>
                    </a>

                    {{else}}
                    <label for="password">Password:</label>
                    <input type="password" name="password" id="password" placeholder="Password" />
                    {{/if}}
                </div>
            </div>
            <div class="submit-button-link-container">
                <a href="/users/create">Register new User</a>
                {{#if loggedIn}}
                <input type="submit" formaction="/users/logout" formmethod="post" class="submit-button"
                    value="Logout" />
                {{else}}
                <div class="google-login-header">
                    <a href="/users/login/google">Login with <i class="fab fa-google"></i></a>
                </div>
                <input type="submit" formaction="/users/login" formmethod="post" class="submit-button" value="Login" />
                {{/if}}
            </div>
        </form>
    </div>
</header>